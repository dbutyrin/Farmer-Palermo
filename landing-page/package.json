{
  "name": "requestum-gulp",
  "version": "2.0.2",
  "description": "Gulpfile for plain JS (Vanilla) projects",
  "repository": {
    "type": "git",
    "url": "https://gitlab.requestum.com/Tykhonenko/project-template-gulp.git"
  },
  "browserslist": [
    "> 5%",
    "Last 2 version",
    "not ie < 11",
    "not ie_mob < 11",
    "not op_mini all",
    "not bb < 10"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "scripts": {
    "eslint": "eslint \"./src/**/*.js\"",
    "stylelint": "stylelint --syntax scss \"./src/**/*.scss\"",
    "lint": "npm run eslint && npm run stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "_moduleAliases": {
    "@@gc": "./config/",
    "@node": "./node_modules/",
    "@modules": "./src/js/modules/"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^8.0.2",
    "browser-sync": "^2.24.5",
    "del": "^3.0.0",
    "dom4": "^2.0.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-compat": "^2.2.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "glob": "^7.1.2",
    "gulp": "^4.0.0",
    "gulp-autoprefixer": "^6.0.0",
    "gulp-clean-css": "^3.9.3",
    "gulp-concat-util": "^0.5.5",
    "gulp-eslint": "^5.0.0",
    "gulp-file-include": "^2.0.1",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^4.1.0",
    "gulp-notify": "^3.2.0",
    "gulp-plumber": "^1.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^4.0.1",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-stylelint": "^8.0.0",
    "gulp-svg-sprites": "^4.1.2",
    "gulp-uglify": "^3.0.0",
    "husky": "^1.0.0",
    "imagemin-giflossy": "^5.1.10",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-pngquant": "^6.0.0",
    "imagemin-svgo": "^7.0.0",
    "imagemin-zopfli": "^5.1.0",
    "module-alias": "^2.1.0",
    "path": "^0.12.7",
    "reset-css": "^4.0.1",
    "stylelint": "^9.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-declaration-strict-value": "^1.0.4",
    "stylelint-no-unsupported-browser-features": "^3.0.0",
    "stylelint-scss": "^3.0.0",
    "stylelint-z-index-value-constraint": "^1.0.0",
    "webpack": "^4.8.3",
    "webpack-stream": "^5.1.1"
  },
  "author": "Alex Tykhonenko",
  "license": "ISC"
}
